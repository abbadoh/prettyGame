<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="gameover">
        <div class="gameover__title">
            GAME OVER
        </div>
        <div class="gameover__score_submit">
            <div>
                Your score: <span class="score"></span>
            </div>
            <div>
                Your name <input type="text" class="gameover__name"/>
            </div>
            <div>
                <button class="gameover__submit">Submit</button>
            </div>
        </div>
    </div>
</fest:template>

