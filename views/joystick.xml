<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
<fest:doctype>html</fest:doctype>
<html style="height: 100%;">
	<head>
		<meta charset="utf-8" />
		<title>
			<fest:value>json.title</fest:value>
		</title>
		<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="mobile-web-app-capable" content="yes" />
	</head>
	<body style="-moz-user-select: none; -webkit-user-select: none; background: black; height: 100%;">
		<div class="authorization" style="text-align: center; display: none;">
			<div style="color: #ddfefd; font: 26px Courier New;">
				Enter game session token
			</div>
			<div>
				<input id="token" maxlength="4" placeholder="Token..." style="width: 120px; height: 30px; color: white; font: 16pt Courier New; background: #333; border: 1px solid #666; text-align: center;" />
			</div>
			<div style="padding-top: 10px;">
				<button id="connect" type="submit" style="width: 120px; height: 30px; color: white; font: 16pt Courier New; background: #333; border: 1px solid #666; text-align: center;">OK</button>
			</div>
		</div>

		<table class="controller" cellspacing="0" cellpadding="0" style="width: 100%; height: 100%; display: none;">
			<tr>
				<td style="vertical-align: middle; padding-left: 20px;">
					<img src="/images/rotate_left.png" />
				</td>
				<td style="width: 100%; text-align: center; vertical-align: middle;">
					<img src="/images/tap_to_fire.png" />
					<div style="color: #ddfefd; font: 26px Courier New; margin-top: 50px;">
						Rotate your device to move left or right
					</div>
					<div style="color: #ddfefd; font: 26px Courier New;">
						Tap the screen to fire
					</div>
				</td>
				<td style="vertical-align: middle; padding-right: 20px;">
					<img src="/images/rotate_right.png" />
				</td>
			</tr>
		</table>

		<script data-main="/js/controllermain" src="/js/lib/require.js"></script>
	</body>
</html>
</fest:template>
