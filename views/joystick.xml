<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
<fest:doctype>html</fest:doctype>
<html style="height: 100%;">
	<head>
		<meta charset="utf-8" />
		<title>
			<fest:value>json.title</fest:value>
		</title>
		<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="mobile-web-app-capable" content="yes" />
		<link rel="stylesheet" type="text/css" href="css/controller.css" />
	</head>
	<body>
		<div class="authorization">
			<div class="authorization__tip">
				Game session token
			</div>
			<div>
				<input class="authorization__input" id="token" maxlength="4" placeholder="Token..." />
			</div>
			<div style="padding-top: 10px;">
				<button class="authorization__submit" id="connect" type="submit">OK</button>
			</div>
		</div>

		<div class="controller">
			<table cellspacing="0" cellpadding="0" style="width: 100%; height: 100%;">
				<tr>
					<td class="controller__rotate_left">
						<img src="/images/rotate_left.png" />
					</td>
					<td class="controller__tap_to_fire">
						<img class="controller__tap_to_fire__image tap_to_fire" src="/images/space.gif" style="" />
						<div class="controller__tap_to_fire__tip">
							Rotate your device to move left or right
						</div>
						<div class="controller__tap_to_fire__tip">
							Tap the screen to fire
						</div>
					</td>
					<td class="controller__rotate_right">
						<img src="/images/rotate_right.png" />
					</td>
				</tr>
			</table>
		</div>

		<script data-main="/js/controllermain" src="/js/lib/require.js"></script>
	</body>
</html>
</fest:template>
